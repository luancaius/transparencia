version: '3.8'
services:
  app:
    image: mcr.microsoft.com/dotnet/aspnet:5.0
    container_name: dotnet-app
    ports:
      - "80:80"
    volumes:
      - ./app:/app
    depends_on:
      - mongo

  mongo:
    image: mongo:latest
    container_name: mongodb
    ports:
      - "27017:27017"
    volumes:
      - mongo-data:/data/db
    environment:
      MONGO_INITDB_ROOT_USERNAME: root
      MONGO_INITDB_ROOT_PASSWORD: root

  sql_server:
    image: mcr.microsoft.com/mssql/server:2022-latest
    container_name: mongodb
        ports:
          - "1433:1433"
        volumes:
          - sqlserver-data:/data/db
        environment:
          MSSQL_SA_USERNAME: root
          MSSQL_SA_PASSWORD: root
volumes:
  mongo-data:
